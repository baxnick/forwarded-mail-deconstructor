module Parse
  grammar Lexical
    rule breakable
      (SS? ascii)+ <TextNode>
    end
    
    rule line
      [^\r\n]* endl <LineNode>
    end

    rule ascii
      [a-zA-Z0-9.\-_\*]+
    end

    rule s
      [ \t]
    end

    rule S
      s+
    end

    rule endl
      (S? "\r\n" / S? "\n")
    end

    rule SS
      [ \t\r\n]+
    end
  end
end

