module Parse
  grammar Email
    include Lexical

    rule participant_entry
      participant / unknown_participant
    end

    rule participant
      fullname SS? '<' address S? '>' <NamedParticipantNode>
    end

    rule unknown_participant
      ('<' address S? '>' / address) <UnknownParticipantNode>
    end

    rule fullname
      breakable <FullNameNode>
    end

    rule address
      breakable '@' breakable <AddressNode>
    end
  end
end

